
<table style="width:100%">
	<thead>
		<tr>
			<td>Due Date</td>
			<td>Tenant</td>
			<td>Amount Due</td>
			<td>Status</td>
		</tr>
	</thead>
<tbody>
	<% @invoices.sort { |x,y| y.due_date <=> x.due_date }.each do |invoice| %>
		<tr>
			<td><%= link_to invoice.due_date.slice(/\d{4}(-\d{2})+/), invoice_path(invoice) %></td>
			<td><%= invoice.tenant.name %></td>
			<td><%= number_to_currency(invoice.amount_due) %></td>
			<td><%= invoice.paid? ? 'Paid' : 'Unpaid' %></td>
		</tr>
		<% end %>
	</tbody>
</table>